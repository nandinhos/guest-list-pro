{
  "mcpServers": {
    "context7": {
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp@latest"],
      "env": {
        "CONTEXT7_API_KEY": ""
      },
      "description": "Context7 server for documentation lookups"
    },
    "basic-memory": {
      "command": "uvx",
      "args": ["basic-memory", "mcp"],
      "description": "Persistent memory for cross-session knowledge"
    },
    "laravel-boost": {
      "command": "docker",
      "args": [
        "compose",
        "exec",
        "-T",
        "-u",
        "1000:1000",
        "-e",
        "WWWUSER=1000",
        "-e",
        "WWWGROUP=1000",
        "laravel.test",
        "php",
        "artisan",
        "boost:mcp"
      ],
      "disabledTools": []
    },
    "serena": {
      "command": "uvx",
      "args": [
        "--from",
        "git+https://github.com/oraios/serena",
        "serena",
        "start-mcp-server",
        "--project-from-cwd"
      ]
    }
  },
  "projectConfig": {
    "name": "laravel",
    "stack": "filament",
    "version": "1.0.0"
  }
}
